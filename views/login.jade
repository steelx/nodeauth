extends layout

block content
	.row
		.small-8.large-8.columns
			h1= title
			p Please #{title} below

			article
				form(method='post',action='/users/login',enctype='multipart/form-data')
					.row
						.large-4.columns
							label.inline Username
						.large-8.columns
							input#email(type="text", name="username", placeholder="username")
					.row
						.large-4.columns
							label.inline Password
						.large-8.columns
							input#password(type="password", name="password", placeholder="Enter password")
					.row
						.large-8.large-offset-4.columns
							button.button(type="submit") Submit
